    <load name="digital_cam.xml">
      <define name="DC_SHUTTER_LED" value="12"/> <!-- LED 12 is on PC12 on GPIO connector, need to explicitly enable in firmware section -->
      <define name="DC_SHUTTER_DELAY" value="1"/> <!-- at 4Hz gives 0.25s shutter trigger pulse -->
      <define name="DC_PUSH" value="LED_OFF" /> <!-- actually LED_OFF is High on Lisa/M v2 -->
      <define name="DC_RELEASE" value="LED_ON" />
    </load>

    <load name="photogrammetry_calculator.xml"/>

<!--
    <load name="nav_catapult.xml"/>
-->
  </modules>

  <servos>
    <servo name="THROTTLE" no="0" min="1000" neutral="1000" max="2000"/>
    <servo name="AILEVON_LEFT" no="1" min="1252" neutral="1552" max="1852"/> <!-- trimmed centered at 1552 -->
    <servo name="ELEVATOR" no="2" min="1950" neutral="1450" max="950"/> <!-- trimmed centered at 1410 -->
    <servo name="RUDDER" no="3" min="1100" neutral="1500" max="1900"/>
    <servo name="AILEVON_RIGHT" no="4" min="1852" neutral="1552" max="1252"/>
  </servos>

  <commands>
    <axis name="THROTTLE" failsafe_value="0"/>
    <axis name="ROLL" failsafe_value="0"/>
    <axis name="PITCH" failsafe_value="0"/>
    <axis name="YAW" failsafe_value="0"/>
  </commands>

  <rc_commands>
    <set command="THROTTLE" value="@THROTTLE"/>
    <set command="ROLL" value="@ROLL"/>
    <set command="PITCH" value="@PITCH"/>
    <set command="YAW" value="@YAW"/>
  </rc_commands>

  <!-- ADD SOME RUDDER MIXING!!!! -->
  <section name="MIXER">
    <define name="MIX_YAW_OF_ROLL" value="0.3f"/>
  </section>

  <command_laws>
    <let var="enable_mix" value="((fbw_mode > FBW_MODE_MANUAL) ? 1 : 0)"/>
    <!-- <let var="enable_mix" value="1"/> -->
    <let var="yaw_mixed" value="(int16_t)((@ROLL) * MIX_YAW_OF_ROLL * (float)($enable_mix))"/>
    <set servo="AILEVON_LEFT" value="@ROLL"/>
    <set servo="AILEVON_RIGHT" value="-@ROLL"/>
    <set servo="THROTTLE" value="@THROTTLE"/>
    <set servo="ELEVATOR" value="@PITCH"/>
    <!-- <set servo="RUDDER" value="@YAW + @ROLL"/> -->
    <set servo="RUDDER" value="@YAW + $yaw_mixed"/>
  </command_laws>

